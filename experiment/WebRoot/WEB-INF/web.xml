<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>refererFilter</filter-name>
		<filter-class>cn.xmut.experiment.web.filter.RefererFilter</filter-class>
	</filter>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>cn.xmut.experiment.web.filter.CodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>refererFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>cn.xmut.experiment.web.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TeacherServlet</servlet-name>
		<servlet-class>cn.xmut.experiment.web.servlet.TeacherServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>HeadmanServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.HeadmanServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ExpertServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.ExpertServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ManagerServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.ManagerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.DownloadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddExperimentServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.AddExperimentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ManagerEstimateServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.ManagerEstimateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DistributeServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.DistributeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ExpertEstimateServlet</servlet-name>
    <servlet-class>cn.xmut.experiment.web.servlet.ExpertEstimateServlet</servlet-class>
  </servlet>



	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TeacherServlet</servlet-name>
		<url-pattern>/TeacherServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HeadmanServlet</servlet-name>
		<url-pattern>/HeadmanServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ExpertServlet</servlet-name>
		<url-pattern>/ExpertServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagerServlet</servlet-name>
		<url-pattern>/ManagerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadServlet</servlet-name>
		<url-pattern>/DownloadServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddExperimentServlet</servlet-name>
		<url-pattern>/AddExperimentServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ManagerEstimateServlet</servlet-name>
		<url-pattern>/ManagerEstimateServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>DistributeServlet</servlet-name>
    <url-pattern>/DistributeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ExpertEstimateServlet</servlet-name>
    <url-pattern>/ExpertEstimateServlet</url-pattern>
  </servlet-mapping>
</web-app>
